<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Левая часть с изображением -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView82"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="40dp"
                app:srcCompat="@drawable/lala" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Забыл пароль"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Введите Свою Учетную Запись Для Сброса"
                android:textAlignment="center"
                android:textColor="#707B81"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Правая часть с формой -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="40dp">

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ugli"
                android:backgroundTint="#F7F7F9"
                android:ems="10"
                android:hint="xyz@gmail.com"
                android:inputType="textEmailAddress"
                android:padding="12dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:backgroundTint="#48B2E7"
                android:text="Отправить"
                app:cornerRadius="14dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>